{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "date": {
      "type": "date",
      "default": "2024-04-01",
      "required": true
    },
    "tags": {
      "type": "enumeration",
      "enum": [
        "animation",
        "transition"
      ],
      "default": "animation",
      "enumName": "animation",
      "required": true
    },
    "article_featured_image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    }
  }
}
